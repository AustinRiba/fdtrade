<li>
	<span class="trade_content"><%= trade.description %></span>
	<span class="trade_options">
	Flip-flop: <b><%= trade.flipflop %></b> 
	Work Trade: <b><%= trade.worktrade %></b>
	</span>
	<span class="timestamp">
		<% if DateTime.now > trade.date %>
			<%= distance_of_time_in_words_to_now(trade.date) %> ago.
		<% else %>
			In <%= distance_of_time_in_words_to_now(trade.date) %>.
		<% end %>
		(<%= trade.date %>) <br/>
		<hr/>
	</span>

</li>
